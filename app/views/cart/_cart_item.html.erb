
<div class="card">
  <div class="card-body">
      <%= render partial: 'products/product',
                  object: cart_item[:product],
                  locals: { show_desc: true, show_add_cart: false, show_card: false } %>
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-9">
        <%= form_with url: cart_index_path, method: :post do |form| %>
          <div class="form-group row">
            <%= hidden_field_tag(:id, cart_item[:product].id)%>
            <%= form.number_field :quantity, in: 1..999, class: "col-sm-2 form_control", value: cart_item[:quantity] %>
            <div class="col-sm-auto">
              <%= button_tag 'Update Quantity', class: "btn btn-secondary" %>
            </div>
        <%end%>
            <div class="col-md-auto">
              <%= button_to cart_path(cart_item[:product]), method: :delete, class: "btn btn-secondary" do %>
                Remove From Cart
              <% end%>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>